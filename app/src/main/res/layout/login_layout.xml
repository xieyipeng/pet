<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <ImageView
        android:scaleType="centerCrop"
        android:src="@drawable/register_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">
            <RelativeLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="130dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/circleImageView_login"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:src="@drawable/test_touxiang3"
                        />
                    <TextView
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:text="USERLOGIN"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">
            <LinearLayout
                android:background="#bbffffff"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <EditText
                    android:layout_marginLeft="30dp"
                    android:id="@+id/login_account_Edit_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.7"
                    android:background="@null"
                    android:hint="   账  号"
                    android:maxLines="1"
                    android:textSize="18sp" />
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/zhanghu" />

            </LinearLayout>
            <TextView
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="#00757171"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <LinearLayout
                android:background="#bbffffff"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <EditText
                    android:layout_marginLeft="30dp"
                    android:id="@+id/login_passWord_Edit_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.7"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:hint=" 密 码"
                    android:maxLines="1"
                    android:textSize="18sp" />
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/mima" />

            </LinearLayout>
            <CheckBox
                android:textColor="#ffffff"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/rember_passWord_Check_Box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="记住密码" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">
            <Button
                android:background="@drawable/shape_line1"
                android:id="@+id/login_button"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="18sp"
                android:textColor="#484848"
                android:text="登       录"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:id="@+id/button_wangji"
                        android:textSize="15sp"
                        android:textColor="#ffffff"
                        android:background="#00ffffff"
                        android:layout_gravity="left"
                        android:layout_width="100dp"
                        android:layout_height="match_parent" />
                    <ProgressBar
                        android:visibility="invisible"
                        android:id="@+id/main_progress"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />
                    <Button
                        android:textColor="#ffffff"
                        android:id="@+id/register_button"
                        android:textSize="15sp"
                        android:text="注   册"
                        android:background="#00ffffff"
                        android:layout_gravity="right"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
